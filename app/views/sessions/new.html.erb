<body class="NewUsers">
    <h2 class="NewUsers-title">Sign-In! </h2>
    <section class="UsersNew">
        <%= form_with url: sessions_path, method: "Post" do |form|%>
            <div class="Form-section">
                <p> Email: </p>
                <%= form.email_field :email, class: "Form-input", placeholder: "Enter Email ID" %>
            </div>
            <div class="Form-section">
                <p> Password: </p>
                <%= form.password_field :password, class: "Form-input", placeholder: "Enter Password" %>
            </div>
            <div class="Form-section">
                <%=form.submit :"Sign In", class: "Form-submit"%>

        <% end %>
    </section>
</body>