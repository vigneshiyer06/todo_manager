<body class="TodoPage">
    <main >
        <article>
            <h1 class="TodoPage-title">My To-do List</h1>
            <%= form_with(url: "/todos" , method: "post", class: "Add_Todo") do %>
                <input class="InputTodo-text" type="text" id="nexttodo" placeholder ="What's next?" name="todo_text">
                <input placeholder=" Due Date" class="InputTodo-date " type="text" onfocus="(this.type='date')" id="duedate" name="due_date" >
                <button class="InputTodo-submit" type="submit" id="Add" >Add</button>
            <% end %>
           
            <%= render partial: "todo-section", locals: {
                section_title: "Overdue",
                todos: @todos.overdue,
                show_due_date: true,
                        
            }  %>
            <%= render partial: "todo-section", locals: {
                section_title: "Due Today",
                todos: @todos.due_today,
                show_due_date: false,
               
            }  %>
            <%= render partial: "todo-section", locals: {
                section_title: "Due Later",
                todos: @todos.due_later,
                show_due_date:true,
                

            }  %>
            
             

        </article>
    </main>
</body>