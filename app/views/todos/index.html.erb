<body class="TodoPage">
    <main >
        <article>
            <h1 class="TodoPage-title">My To-do List</h1>
            <%= form_with(url: "/todos" , method: "post", class: "Add_Todo") do |todo| %>
                <%= todo.text_field :todo_text, placeholder: "What's Next ?" ,class: "InputTodo-text" , required: true%>
                <%= todo.date_field :due_date, placeholder: "Due Date?" ,class: "InputTodo-date" , required: true%>
                <%= todo.submit :"Add", class: "InputTodo-submit" %>
            <% end %>
           
            <%= render partial: "todo-section", locals: {
                section_title: "Overdue",
                todos: @todos.overdue,
                show_due_date: true,
                        
            }  %>
            <%= render partial: "todo-section", locals: {
                section_title: "Due Today",
                todos: @todos.due_today,
                show_due_date: false,
               
            }  %>
            <%= render partial: "todo-section", locals: {
                section_title: "Due Later",
                todos: @todos.due_later,
                show_due_date:true,
                

            }  %>
            
             

        </article>
    </main>
</body>