<section >
    <div class="TodoSection-main" >
        <h2 class="TodoSection-title"><%= section_title %></h2>
        <p class="TodoSection-count"><%= todos.completed.count %>/<%= todos.count %></p>
    </div>

                
    <% todos.each do |todo|  %>
        <ul class="TodoSection-ul">     
            <div class="TodoSection">
                <%= form_with(url: "/todos/#{todo.id}", method: "put") do %>
                    <input class="TodoSection-checkbox " name="completed" type="checkbox" <%= todo.completed ? "checked": ""%> onclick="this.form.submit()">
                <% end %>  
                <p class='<%= todo.completed ? "TodoSection-completed_task" : "" %>'><%= todo.todo_text%></p>
                <% if show_due_date%>
                    <p class="TodoItem-duedate"> <%= todo.due_date.to_s(:short)%></p>
                <% end %>
                <a href="javascript:void(0)">
                    <img src="trashcan.svg" class="TodoSection-icon" >
                </a>
             </div>
        </ul>              

    <% end %>
</section>